    <mj-section background-color="#126de5">
      <mj-column>
        <mj-image
          src="https://raw.githubusercontent.com/nrjdalal/mailz/master/mcs/assets/sofa-03.png"
          alt=""
          width="300px"
          padding-top="24px"
          border-radius="24px"
        />

        <mj-text
          color="white"
          align="center"
          font-size="18px"
          font-weight="500"
          line-height="1.4"
          >Your Furniture, Your Way</mj-text
